<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:clipToPadding="true"
              android:orientation="vertical">

    <com.udit.aijiabao.widgets.TitleView
        android:id="@+id/apply_know_titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TabLayout
        android:id="@+id/apply_know_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/blue_title"
        app:tabSelectedTextColor="@color/blue_title"
        app:tabTextColor="@color/gray_80"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/apply_know_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>