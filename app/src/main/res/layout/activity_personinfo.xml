<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:clipToPadding="true"
    android:orientation="vertical">

    <com.udit.aijiabao.widgets.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="昵称"
                    android:textSize="@dimen/font_body" />

                <com.udit.aijiabao.widgets.ClearEditText
                    android:id="@+id/nicheng"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:background="@color/gray"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="微信号"
                    android:textSize="@dimen/font_body" />

                <com.udit.aijiabao.widgets.ClearEditText
                    android:id="@+id/weixin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:background="@color/gray"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="邮箱"
                    android:textSize="@dimen/font_body" />

                <com.udit.aijiabao.widgets.ClearEditText
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/gray"
                    android:layout_weight="3.0"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="地址"
                    android:textSize="@dimen/font_body" />

                <com.udit.aijiabao.widgets.ClearEditText
                    android:id="@+id/adress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:layout_margin="5dp"
                    android:background="@color/gray"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="姓名"
                    android:textSize="@dimen/font_body" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="3.0"
                    android:background="@drawable/layout_frame"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/sex_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="性别"
                    android:textSize="@dimen/font_body" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_frame"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="手机号"
                    android:textSize="@dimen/font_body" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_frame"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="身份证"
                    android:textSize="@dimen/font_body" />

                <com.udit.aijiabao.widgets.ClearEditText
                    android:id="@+id/id_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_frame"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="级别"
                    android:textSize="@dimen/font_body" />

                <TextView
                    android:id="@+id/huiyuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_frame"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/cartypr_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="驾照类型"
                    android:textSize="@dimen/font_body" />

                <TextView
                    android:id="@+id/jiazhaoleixin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.0"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_frame"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/gray_bg"
                android:paddingLeft="10dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="报名日期"
                    android:textSize="@dimen/font_body" />

                <TextView
                    android:id="@+id/baomRiqi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_frame"
                    android:layout_weight="3.0"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray_80"
                    android:textSize="@dimen/font_body" />

                <ImageView
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/arrow_right" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>