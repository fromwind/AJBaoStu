<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_weight="0.16"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/project01_order_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_click_selector"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/question_order"
            android:gravity="center"
            android:padding="10dp"
            android:text="顺序练习"
            android:layout_above="@+id/project01_error_practice"
            android:layout_toLeftOf="@+id/project01_real_practice"
            android:layout_toStartOf="@+id/project01_real_practice"/>

        <TextView
            android:id="@+id/project01_collect_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/project01_error_practice"
            android:layout_toEndOf="@+id/project01_real_practice"
            android:layout_toRightOf="@+id/project01_real_practice"
            android:background="@drawable/item_click_selector"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/question_collect"
            android:gravity="center"
            android:padding="10dp"
            android:text="我的收藏"/>


        <TextView
            android:id="@+id/project01_class_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_click_selector"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/question_special"
            android:gravity="center"
            android:padding="10dp"
            android:text="专项练习"
            android:layout_above="@+id/project01_collect_practice"
            android:layout_toRightOf="@+id/project01_real_practice"
            android:layout_toEndOf="@+id/project01_real_practice"/>

        <TextView
            android:id="@+id/project01_real_practice"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawablePadding="6dp"
            android:text="模拟考试"
            android:textColor="@color/white"
            android:background="@drawable/blue_circle"
            android:gravity="center"/>

        <TextView
            android:id="@+id/project01_error_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_click_selector"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/question_errorbook"
            android:gravity="center"
            android:padding="10dp"
            android:text="我的错题"
            android:layout_alignTop="@+id/view2"
            android:layout_toLeftOf="@+id/project01_real_practice"
            android:layout_toStartOf="@+id/project01_real_practice"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_40"
            android:layout_below="@+id/project01_real_practice"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_40"
            android:layout_above="@+id/project01_real_practice"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_40"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/project01_real_practice"
            android:layout_toEndOf="@+id/project01_real_practice"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_40"
            android:id="@+id/view2"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/project01_real_practice"
            android:layout_toStartOf="@+id/project01_real_practice"/>
    </RelativeLayout>


</LinearLayout>