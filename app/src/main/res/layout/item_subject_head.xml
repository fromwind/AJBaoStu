<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/gray_10"
              android:orientation="vertical">

    <include layout="@layout/comment_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:id="@+id/standard_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/item_click_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">

            <TextView
                android:id="@+id/standard_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_click_selector"
                android:drawableTop="@mipmap/project2_standard"
                android:gravity="center"
                android:padding="10dp"
                android:text="合格标准"
                android:textSize="@dimen/font_body"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/experience_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/item_click_selector"
            android:gravity="center">

            <TextView
                android:id="@+id/experience_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_click_selector"
                android:drawableTop="@mipmap/project2_skill"
                android:gravity="center"
                android:padding="10dp"
                android:text="技巧经验"
                android:textSize="@dimen/font_body"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/technique_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/item_click_selector"
            android:gravity="center">

            <TextView
                android:id="@+id/technique_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_click_selector"
                android:drawableTop="@mipmap/project2_appoint"
                android:gravity="center"
                android:padding="10dp"
                android:text="考试预约"
                android:textSize="@dimen/font_body"/>

        </LinearLayout>

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/movie"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="教学视频"
        android:textSize="@dimen/font_body"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="全部下载"
        android:textSize="12dp"/>
</RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

</LinearLayout>